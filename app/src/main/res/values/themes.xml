<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Paragownik" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Background color for the entire window -->
        <item name="android:windowBackground">@color/main_color_dark</item>

        <item name="android:textColor">@color/white_text</item>
    </style>
    <style name="Theme.Paragownik" parent="Base.Theme.Paragownik">
        <item name="editTextStyle">@style/EditTextStyle</item> <!-- Dodaj styl EditText do motywu -->
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white_text</item> <!-- Kolor tekstu na biaÅ‚y -->
        <item name="android:textColorHint">@color/sub_white_text</item> <!-- Kolor hintu -->
        <item name="colorControlNormal">@color/sub_white_text</item> <!-- Kolor linii - stan normalny -->
        <item name="colorControlActivated">@color/white_text</item> <!-- Kolor linii - stan aktywny (focus) -->
    </style>
</resources>