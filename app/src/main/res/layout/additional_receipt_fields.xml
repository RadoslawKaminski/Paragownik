<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="24dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_text"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Dodatkowy paragon - Numer drogerii i Numer paragonu w jednej linii -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <EditText
                android:id="@+id/additionalStoreNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="4"
                android:hint="Dogeria"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <EditText
                android:id="@+id/additionalReceiptNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="4"
                android:hint="Numer paragonu"
                />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/additionalReceiptDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Data paragonu (DD-MM-YYYY)"

        android:layout_marginTop="20dp"/>

</LinearLayout>