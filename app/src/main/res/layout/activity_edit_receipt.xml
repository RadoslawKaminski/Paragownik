<?xml version="1.0" encoding="utf-8"?>
<!-- Layout dla aktywności edycji paragonu i klienta (EditReceiptActivity). -->
<!-- Używa ScrollView, aby umożliwić przewijanie na mniejszych ekranach. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_dark"
    android:padding="16dp"
    tools:context=".EditReceiptActivity">

    <!-- Główny kontener LinearLayout (pionowy) wewnątrz ScrollView. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"> <!-- Dodatkowy padding na dole dla przycisków -->

        <!-- Tytuł ekranu. -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/edit_receipt_client_title"
            android:textSize="24sp" />

        <!-- Sekcja edycji danych paragonu. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Numer drogerii i paragonu w jednej linii. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Kontener dla numeru drogerii. -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <!-- Pole edycji numeru drogerii. -->
                    <EditText
                        android:id="@+id/editReceiptStoreNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="postalCode"
                        android:hint="@string/store_number_hint"
                        android:inputType="number"
                        android:maxLength="4" />
                </LinearLayout>

                <!-- Kontener dla numeru paragonu. -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <!-- Pole edycji numeru paragonu. -->
                    <EditText
                        android:id="@+id/editReceiptNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="postalCode"
                        android:hint="@string/receipt_number_hint"
                        android:inputType="number"
                        android:maxLength="4" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pole edycji daty paragonu. -->
            <EditText
                android:id="@+id/editReceiptDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="date"
                android:hint="@string/receipt_date_hint"
                android:inputType="date" /> <!-- Zmieniane przez TextWatcher -->

            <!-- Sekcja edycji daty weryfikacji. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Etykieta sekcji. -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/verification_section_title"
                    android:textSize="18sp" />

                <!-- Pole daty weryfikacji i checkbox "Dzisiaj" w jednej linii. -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <!-- Kontener dla pola daty weryfikacji. -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <!-- Pole edycji daty weryfikacji. -->
                        <EditText
                            android:id="@+id/editVerificationDateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="date"
                            android:hint="@string/verification_date_hint"
                            android:inputType="date" /> <!-- Zmieniane przez TextWatcher -->
                    </LinearLayout>

                    <!-- Kontener dla checkboxa "Dzisiaj". -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <!-- Checkbox "Dzisiaj". -->
                        <CheckBox
                            android:id="@+id/editVerificationDateTodayCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today"
                            android:textColor="@color/white_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout> <!-- Koniec sekcji daty weryfikacji -->

        </LinearLayout> <!-- Koniec sekcji danych paragonu -->

        <!-- Sekcja edycji danych klienta. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <!-- Etykieta sekcji. -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/client_data_section_title"
                android:textSize="18sp" />

            <!-- Pole edycji opisu klienta (wieloliniowe). -->
            <EditText
                android:id="@+id/editClientDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="text"
                android:gravity="top"
                android:hint="@string/client_description_hint"
                android:inputType="textMultiLine"
                android:lines="2" />

            <!-- Pole edycji numeru aplikacji klienta. -->
            <EditText
                android:id="@+id/editClientAppNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="number"
                android:hint="@string/client_app_number_hint"
                android:inputType="number"
                android:maxLength="14" />

            <!-- Pole edycji numeru Amodit. -->
            <EditText
                android:id="@+id/editAmoditNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="number"
                android:hint="@string/amodit_number_hint"
                android:inputType="number"
                android:maxLength="8" />

            <!-- Kontener na zdjęcie i przycisk dodawania zdjęcia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Miniatura zdjęcia klienta -->
                <ImageView
                    android:id="@+id/editClientPhotoImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:contentDescription="@string/cd_client_photo_placeholder"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_photo_placeholder" /> <!-- Placeholder -->

                <!-- Przycisk dodawania/zmiany zdjęcia -->
                <ImageButton
                    android:id="@+id/editAddChangePhotoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/cd_add_change_photo_button"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_add_a_photo"
                    app:tint="@color/scnd_color_bright" />

            </LinearLayout>

        </LinearLayout> <!-- Koniec sekcji danych klienta -->


        <!-- Przyciski akcji (Zapisz, Usuń paragon, Usuń klienta). -->
        <!-- Przycisk zapisu zmian. -->
        <Button
            android:id="@+id/saveReceiptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green_save"
            android:paddingVertical="16dp"
            android:text="@string/save_changes_button_text"
            android:textColor="@color/white_text"
            android:textSize="18sp" />

        <!-- Przycisk usuwania tylko tego paragonu (styl Outlined). -->
        <Button
            android:id="@+id/deleteReceiptButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/delete_receipt_button_text"
            android:textColor="@android:color/holo_red_dark"
            app:strokeColor="@android:color/holo_red_dark" />

        <!-- Przycisk usuwania klienta i wszystkich jego paragonów (styl Outlined). -->
        <Button
            android:id="@+id/deleteClientButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_client_button_text"
            android:textColor="@android:color/holo_red_dark"
            app:strokeColor="@android:color/holo_red_dark" />

    </LinearLayout>
</ScrollView>