<?xml version="1.0" encoding="utf-8"?>
<!-- Layout pojedynczego elementu listy paragonów w ReceiptListActivity. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/main_color_dark"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp">

    <!-- Kontener poziomy na miniaturę, treść (tekst) i ikonę edycji. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Miniatura zdjęcia klienta -->
        <ImageView
            android:id="@+id/receiptItemClientPhotoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:contentDescription="@string/cd_receipt_item_client_photo"
            android:padding="3dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_photo_placeholder" />

        <!-- Kontener pionowy na wszystkie informacje tekstowe. -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Numer paragonu i Data paragonu. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Numer paragonu. -->
                <TextView
                    android:id="@+id/receiptNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="1234" />

                <!-- Separator. -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/sub_white_text" />

                <!-- Data paragonu. -->
                <TextView
                    android:id="@+id/receiptDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="01-01-2024" />
            </LinearLayout>

            <!-- Data weryfikacji. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Etykieta "Weryfikacja:". -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:text="@string/verification_label"
                    android:textSize="16sp" />

                <!-- Wartość daty weryfikacji. -->
                <TextView
                    android:id="@+id/verificationDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    tools:text="02-01-2024" />
            </LinearLayout>

            <!-- Opis klienta. -->
            <TextView
                android:id="@+id/clientDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                tools:text="Opis klienta lorem ipsum dolor sit amet siala lala lalala lalala" />

            <!-- Numer aplikacji klienta. -->
            <TextView
                android:id="@+id/clientAppNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/sub_white_text"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Nr app: 12345678901234"
                tools:visibility="visible" />

            <!-- Numer Amodit. -->
            <TextView
                android:id="@+id/amoditNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/sub_white_text"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Amodit: 12345678"
                tools:visibility="visible" />

        </LinearLayout> <!-- Koniec bloku z tekstem -->

        <!-- Kontener na ikonę edycji. -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Ikona edycji. -->
            <ImageView
                android:id="@+id/editReceiptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_edit_receipt_icon"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_edit_icon" />
        </LinearLayout>
    </LinearLayout>

    <!-- Linia separatora na dole. -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/sub_white_text" />

</LinearLayout>
