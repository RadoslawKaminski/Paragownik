<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown_background"
    android:padding="16dp"
    tools:context=".AddClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj Klienta i Paragon"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numer paragonu:"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/receiptNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Wprowadź numer paragonu"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data paragonu (YYYY-MM-DD):"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/receiptDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="YYYY-MM-DD"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis klienta:"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/clientDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:hint="Wprowadź opis klienta"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/addClientButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj Klienta"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white_text"/>

    </LinearLayout>
</ScrollView>