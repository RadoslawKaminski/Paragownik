<?xml version="1.0" encoding="utf-8"?>
<!-- Layout dla aktywności wyświetlającej obraz na pełnym ekranie z zoomem. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".FullScreenImageActivity">
    <!-- Użycie półprzezroczystego czarnego tła (#CC = 80% alpha) -->

    <!-- Komponent PhotoView do wyświetlania obrazu z obsługą gestów zoomowania. -->
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/cd_full_screen_image"/>

</FrameLayout>





